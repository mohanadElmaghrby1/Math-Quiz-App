<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">#4E342E</item>
        <item name="colorPrimary">#795548</item>
        <item name="colorAccent">#EF9A9A</item>
        <item name="colorButtonNormal">#795548</item>
    </style>

    <!--style the question text-->
    <style name="question_style">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!--style the radio buttons -->
    <style name="radio_button_style">
        <item name="android:layout_marginLeft">16dp</item>
    </style>


    <!--style the line between the questions-->
    <style name="line_view">
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <!--style the submit button-->
    <style name="submit_button">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">24dp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
</resources>
